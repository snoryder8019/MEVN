            <div class="eventBody">
                <h1 maxlength="20"><%= data[0][i].bTitle%></h1>
                <h2 maxlength="20"><%= data[0][i].bSubtitle%></h2>
                <div style="background-image:url('<%= data[0][i].imgName%>');" class="imgBox"></div>
                <p><%= data[0][i].bDetails%></p>
            </div>
            <%}%>
            <%}%>
        </div>
   
        <div class="indexSpacerBottom"></div>
