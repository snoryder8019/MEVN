<!DOCTYPE html>
<html>
  <body >
      <%- include('config/head.ejs')%>
 
        <%- include('partials/cart.ejs')%>
    <%- include('config/header.ejs')%>
    <%- include('config/bkgdImg.ejs')%>
    <%- include('config/loadScreen.ejs')%>

    <div class="mainStyle">
      
          <div class="eventBody">
          <h1 class="h1Span"><%= title%></h1>
          <form action="/marketOp">
            <div class="marketFilter">
              <select onchange="loading('filtering inventory'), submit()"  name="catID" id="">
                <option >filter by category</option>
                <% for(var i=1;i<catagory.length;i++){%>
                  <option value="<%= catagory[i].catName%>"><%= catagory[i].catName%></option>
                  <%}%>                  
                </select>
              </div>              
            </form>
          </div>
                <div class="eventBody">
                <% if(data.length<1){%>
               
                    <div class="eventBody">
                      <h1 class="h1Span">No inventory found for this Category</h1>
                      <%}%>
                      <div class="invGrid">
                        <% for(var i=0;i<data.length;i++){%>
                          <a onclick="loading('getting product details')" href="/productID/<%= data[i]._id%>"> 
                            <div class="gridContain">
                              <div>
                                <h2 class="prodHeadline"><%=data[i].name%></h2>
                                <h3>$<%=data[i].price%>.00</h3>
                              </div>
            <div class="imgCont">
              <img class="invImg" src=" <%= data[i].imgName%>" alt="">
            </div>
          </div>                
        </a>
        <%}%>
      </div>
    </div>
 
    <div class="indexSpacerBottom"></div>
</div>
  </div>
    <%- include('config/footer.ejs')%> 

    <%- include('./config/baseScripts.ejs')%>
    </body> </html>